<%= form_for(@post, url: reply_topic_path(@topic)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <%= f.submit "Preview", name: "preview", class: "btn btn-primary" %>
<% end %>