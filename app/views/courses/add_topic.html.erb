<% provide(:title, 'Add Topic') %>
<h1>Add Topic</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@topic, url: save_topic_course_path(@course)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= fields_for(:post) do |post| %>
        <%= post.label :content, "Message" %>
        <%= post.text_area :content %>
      <% end %>

      <%= f.submit "Add topic", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>