<div class="row">
  <div class="span6 offset3">
    <%= form_for(@course, url: add_course_college_path(@college)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Add course", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>